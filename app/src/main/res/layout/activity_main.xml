<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="@string/init_time"
            android:layout_width="259dp"
            android:layout_height="100dp" android:id="@+id/textViewTimer"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:textSize="72sp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/textViewTimer">
        <Button
                android:text="@string/button_start"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content" android:id="@+id/buttonStart"
                android:onClick="onClickStartTimer"/>
        <Button
                android:text="@string/button_pause"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content" android:id="@+id/buttonPause"
                android:onClick="onClickPauseTimer"/>
        <Button
                android:text="@string/button_reset"
                android:layout_width="match_parent"
                android:layout_margin="8dp"
                android:layout_height="wrap_content" android:id="@+id/buttonReset"
                android:onClick="onClickResetTimer"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>